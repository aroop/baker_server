= simple_form_for(resource, :html => {:class => 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :product_id, label: 'Product ID', input_html: { class: "span6" }, hint: 'A unique identifier that will be used for reporting. It can be composed of letters and numbers.'
    = f.input :name, input_html: { class: "span6" }, hint: ''
    = f.input :paid, input_html: { class: "span6" }, hint: 'If paid option is selected we will check with App store to verify about the transaction before providing a download url.'
    = f.input :description, input_html: { class: "span6", rows: 8 }, hint: ''
    = f.input :content, as: :file, input_html: { class: "span6" }, hint: ''
    = f.input :icon, as: :file, input_html: { class: "span6" }, hint: ''
    = f.input :preview, as: :file, input_html: { class: "span6" }, hint: ''

  .form-actions
    = f.button :submit