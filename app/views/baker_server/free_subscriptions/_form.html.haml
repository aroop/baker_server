= simple_form_for([parent, resource], :html => {:class => 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :product_id, label: 'Product ID', input_html: { class: "span6" }, hint: 'A unique identifier that will be used for reporting. It can be composed of letters and numbers.'
    = f.input :icon, as: :file, input_html: { class: "span6" }, hint: ''
    = f.input :preview, as: :file, input_html: { class: "span6" }, hint: ''

  .form-actions
    = f.button :submit