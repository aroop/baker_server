= simple_form_for(@subscription, :html => {:class => 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, input_html: { class: "span6" }, hint: ''
    = f.input :description, input_html: { class: "span6", rows: 8 }, hint: ''
    -#= f.input :expiration_message, input_html: { class: "span6" }, hint: ''

  .form-actions
    = f.button :submit